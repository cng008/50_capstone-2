{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.playlist.com/playlistNew.schema.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "handle": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "maxLength": 200
    },
    "created_at": {
      "type": "string"
    },
    "image": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["name", "username", "image"]
}
